{
    "required_api_version": "^2.0.0",
    "name": "Locator",
    "description": "This can locate files using locate tool",
    "developer_name": "Mauricio Jost",
    "icon": "images/icon.png",
    "options": {
        "query_debounce": 0.3
    },
    "preferences": [
        {
            "id": "locate_file_keyword",
            "type": "keyword",
            "name": "Locate file from database",
            "default_value": "fl"
        },
        {
            "id": "locate_dir_keyword",
            "type": "keyword",
            "name": "Locate directory from database",
            "default_value": "dl"
        },
        {
            "id": "update_keyword",
            "type": "keyword",
            "name": "Update files database",
            "default_value": "fu"
        },
        {
            "id": "locate_flags",
            "type": "text",
            "name": "Flags to be used for locate tool",
            "default_value": "--ignore-case --limit 10"
        },
        {
            "id": "open_script",
            "type": "text",
            "name": "Script to be used to open files once selected",
            "default_value": "gedit"
        },
        {
            "id": "terminal_emulator",
            "type": "select",
            "name": "Terminal Emulator",
            "description": "Sets the terminal emulator to open directories directly in the terminal",
            "default_value": "gnome-terminal",
            "options": ["gnome-terminal", "tilix", "terminator", "xfce-terminal"]
        },
        {
            "id": "permissive_pattern",
            "type": "select",
            "name": "Permissive Pattern",
            "description": "Whether or not the pattern introduced is interpreted as *pattern*",
            "default_value": "yes",
            "options": ["yes", "no"]
        }
    ]
}
